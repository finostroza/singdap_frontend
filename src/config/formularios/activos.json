{
    "endpoint": "/activos",
    "id_field": "id",
    "title_new": "Nuevo Activo",
    "title_edit": "Editar Activo",
    "width": 1250,
    "height": 800,
    "sections": [
        {
            "title": "1. Identificación",
            "description": "Antecedentes principales para individualizar el activo.",
            "fields": [
                {
                    "key": "nombre_activo",
                    "label": "Nombre",
                    "description": "Denominación oficial y única del activo de datos, sistema, base de datos, proceso o recurso de información.",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "descripcion",
                    "label": "Descripción",
                    "description": "Descripción general del activo de datos, indicando qué información contiene, su propósito principal y el uso que se le da dentro de los procesos institucionales.",
                    "type": "textarea",
                    "height": 100,
                    "required": false
                },
                {
                    "key": "tipo_activo_id",
                    "label": "Tipo de Activo",
                    "description": "Seleccione la naturaleza del activo de datos según su forma de implementación.",
                    "type": "combo",
                    "source": "/catalogos/tipo-activo",
                    "cache_key": "catalogo_tipos_v3",
                    "required": true
                },
                {
                    "key": "tipo_activo_otro",
                    "label": "Especifique Otro",
                    "description": "Indique la naturaleza del activo si seleccionó 'Otro'.",
                    "type": "text",
                    "required": true,
                    "visible_when": {
                        "field": "tipo_activo_id",
                        "contains": "Otro"
                    }
                },
                {
                    "key": "estado_activo_id",
                    "label": "Estado",
                    "description": "Indique la situación actual del activo de datos dentro de la institución.",
                    "type": "combo",
                    "source": "/catalogos/estado-activo",
                    "cache_key": "catalogo_estados",
                    "required": true
                },
                {
                    "key": "url_direccion",
                    "label": "URL / Dirección",
                    "description": "Dirección web o ubicación lógica desde donde se accede al activo de datos, en caso de que corresponda.",
                    "type": "text",
                    "required": false
                },
                {
                    "key": "alojamiento_activo",
                    "label": "¿Dónde se aloja el activo?",
                    "description": "Ubicación física o lógica donde reside el activo de datos.",
                    "type": "combo_text",
                    "multiple": true,
                    "combo_static_options": [
                        {
                            "nombre": "Disco NAS04",
                            "id": "Disco NAS04"
                        },
                        {
                            "nombre": "Disco NAS05",
                            "id": "Disco NAS05"
                        },
                        {
                            "nombre": "Disco NAS09",
                            "id": "Disco NAS09"
                        },
                        {
                            "nombre": "Base de datos específica del Activo",
                            "id": "Base de datos específica del Activo"
                        }
                    ],
                    "required": true
                },
                {
                    "key": "infraestructura_ti",
                    "label": "Infraestructura TI",
                    "description": "Infraestructura tecnológica asociada al activo de datos.",
                    "type": "combo_text",
                    "multiple": false,
                    "combo_static_options": [
                        {
                            "nombre": "Servidores físicos institucionales",
                            "id": "Servidores físicos institucionales"
                        },
                        {
                            "nombre": "Infraestructura en Nube",
                            "id": "Infraestructura en Nube"
                        },
                        {
                            "nombre": "Sistema heredado",
                            "id": "Sistema heredado"
                        },
                        {
                            "nombre": "Bases de Datos",
                            "id": "Bases de Datos"
                        },
                        {
                            "nombre": "API / Servicio Web",
                            "id": "API / Servicio Web"
                        },
                        {
                            "nombre": "Repositorio institucional de archivos (One Drive)",
                            "id": "Repositorio institucional de archivos (One Drive)"
                        },
                        {
                            "nombre": "Máquina Virtual Institucional",
                            "id": "Máquina Virtual Institucional"
                        }
                    ],
                    "required": true
                },
                {
                    "key": "procesos_vinculados",
                    "label": "Procesos vinculados",
                    "description": "Vinculación con procesos institucionales o de negocio.",
                    "type": "combo",
                    "source": "/catalogos/procesos-vinculados",
                    "cache_key": "catalogo_procesos_vinculados",
                    "required": false
                },
                {
                    "key": "marco_habilitante",
                    "label": "Marco Habilitante",
                    "description": "Normativa o regulación que respalda el uso del activo.",
                    "type": "combo_text",
                    "multiple": true,
                    "source": "/catalogos/marco-habilitante",
                    "cache_key": "catalogo_marco_habilitante_v3",
                    "required": true
                },
                {
                    "key": "importancia_id",
                    "label": "Importancia",
                    "description": "Nivel de relevancia del activo de datos para el cumplimiento de funciones institucionales, la toma de decisiones o la continuidad operativa.",
                    "type": "combo",
                    "source": "/catalogos/importancia",
                    "cache_key": "catalogo_importancia_v2",
                    "required": false
                }
            ]
        },
        {
            "title": "2. Responsables",
            "description": "Personas y roles encargados del activo.",
            "fields": [
                {
                    "key": "responsable",
                    "label": "Nombre Responsable",
                    "description": "Nombre completo de la persona responsable del activo de datos o del tratamiento asociado.",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "fono_responsable",
                    "label": "Fono Responsable",
                    "description": "Número de teléfono de contacto del responsable del activo de datos.",
                    "type": "text",
                    "required": true
                },
                {
                    "key": "rol",
                    "label": "Rol",
                    "description": "Rol que desempeña el responsable respecto del activo de datos.",
                    "type": "combo",
                    "source": "/catalogos/rol-activo",
                    "cache_key": "catalogo_rol_activo",
                    "required": true
                },
                {
                    "key": "subsecretaria_id",
                    "label": "Subsecretaría",
                    "description": "Subsecretaría a la que pertenece el responsable del activo de datos.",
                    "type": "combo",
                    "source": "/setup/subsecretarias",
                    "cache_key": "catalogo_subsecretarias",
                    "triggers_reload": [
                        "division_id"
                    ],
                    "required": true
                },
                {
                    "key": "division_id",
                    "label": "División",
                    "description": "División organizacional a la cual se adscribe el responsable.",
                    "type": "combo",
                    "cache_key": "catalogo_divisiones_v2",
                    "depends_on": "subsecretaria_id",
                    "dependency_endpoint_template": "/setup/divisiones?subsecretaria_id={value}",
                    "triggers_reload": [
                        "departamento_id"
                    ],
                    "required": true
                },
                {
                    "key": "departamento_id",
                    "label": "Departamento",
                    "description": "Departamento perteneciente a la división.",
                    "type": "combo",
                    "cache_key": "catalogo_departamentos_v2",
                    "depends_on": "division_id",
                    "dependency_endpoint_template": "/setup/departamentos?division_id={value}",
                    "required": true
                }
            ]
        },
        {
            "title": "3. Seguridad y Privacidad",
            "description": "Niveles de seguridad, privacidad y controles.",
            "fields": [
                {
                    "key": "criticidad_id",
                    "label": "Criticidad",
                    "description": "Nivel de criticidad del activo de datos considerando su impacto institucional, operativo y reputacional ante incidentes de seguridad o indisponibilidad.",
                    "type": "combo",
                    "source": "/catalogos/criticidad",
                    "cache_key": "catalogo_criticidad_v2",
                    "required": true
                },
                {
                    "key": "nivel_confidencialidad_id",
                    "label": "Confidencialidad",
                    "description": "Nivel de confidencialidad del activo de datos según las políticas institucionales vigentes.",
                    "type": "combo",
                    "source": "/catalogos/nivel-confidencialidad",
                    "cache_key": "catalogo_confidencialidad_v2",
                    "required": true
                }
            ]
        },
        {
            "title": "4. Categoría de Datos",
            "description": "Clasificación de la información contenida.",
            "fields": [
                {
                    "key": "categoria_ids",
                    "label": "Categoría",
                    "description": "Seleccione una o más categorías que correspondan al activo.",
                    "type": "combo",
                    "multiple": true,
                    "source": "/catalogos/categoria-activo",
                    "cache_key": "catalogo_categorias_v3",
                    "required": true
                },
                {
                    "key": "datos_sensibles",
                    "label": "¿Tiene datos Sensibles?",
                    "description": "Indique si el activo de datos contiene datos personales de carácter sensible, conforme a la normativa vigente.",
                    "type": "combo_static",
                    "options": [
                        {
                            "id": false,
                            "nombre": "No"
                        },
                        {
                            "id": true,
                            "nombre": "Sí"
                        }
                    ],
                    "visible_when": {
                        "field": "categoria_ids",
                        "contains": "Dato Personal - Sensible"
                    },
                    "required": true
                },
                {
                    "key": "tipo_sensible",
                    "label": "Tipo Sensible",
                    "description": "Especifique el tipo de dato personal sensible contenido en el activo, solo en caso de haber indicado que sí existen datos sensibles.",
                    "type": "combo",
                    "source": "/catalogos/tipo-sensible",
                    "required": false,
                    "visible_when": {
                        "field": "datos_sensibles",
                        "value": true
                    }
                }
            ]
        }
    ]
}